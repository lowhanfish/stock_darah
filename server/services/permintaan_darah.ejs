    }

    .harapkan-title {
      font-weight: bold;
      font-size: 9pt;
      margin-bottom: 4px;
    }

    .harapkan-cols {
      display: flex;
      gap: 20px;
    }

    .harapkan-col {
      width: 50%;
    }

    .harapkan-col .col-title {
      font-size: 8pt;
      text-decoration: underline;
      margin-bottom: 6px;
    }

    .harapkan-line {
      margin: 6px 0;
    }

    .harapkan-line .checkbox {
      margin-right: 6px;
    }

