      display: inline-block;
      border-bottom: 1px dotted #000;
      min-width: 70px;
      height: 12px;
      vertical-align: bottom;
    }

    .harapkan-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      column-gap: 24px;
    }
    
    .harapkan-box {
      padding-right: 6px;
    }
    
    .harapkan-head {
      font-size: smaller;
      text-decoration: underline;
      margin-bottom: 6px;
    }
    
    .harapkan-sub {
      margin-bottom: 6px;
    }
    
    .harapkan-row {
      display: grid;
      grid-template-columns: 18px auto 1fr 22px;
      align-items: center;
      margin-bottom: 6px;
    }

    .plasma-wrapper {
      margin-top: 6px;
    }
    
    .plasma-grid {
      display: grid;
      grid-template-columns: 140px 1fr;
      column-gap: 12px;
      align-items: start;
