    }

    .colon {
      width: 10px;
    }

    .value {
      border-bottom: 1px dotted #000;
    }

    .checkbox {
      display: inline-block;
      width: 13px;
      height: 13px;
      border: 1px solid #000;
      text-align: center;
      font-size: 11px;
      line-height: 11px;
      margin-right: 5px;
