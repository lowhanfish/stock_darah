    }

    .form-line {
      margin: 4px 0;
    }

    .form-line .label {
      display: inline-block;
      width: 180px;
    }

    .form-line .dots {
      display: inline-block;
      border-bottom: 1px dotted #000;
      width: calc(100% - 190px);
      min-height: 14px;
    }

    .form-line .dots.short {
      width: 55%;
    }

    .form-line .checkbox-group {
      display: inline-block;
      margin-left: 20px;
    }

    .form-line .checkbox {
      margin-left: 10px;
    }

    .harapkan-wrapper {
